/* vim: set ft=jsonc: */

{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowSyntheticDefaultImports": true,
    "checkJs": true,
    "baseUrl": ".",
    "resolveJsonModule": true,
    "paths": {
      "@app": ["./src/app.js"],
      "@commons/*": ["./src/commons/*"],
      "@modules/*": ["./src/modules/*"]
    }
  },
  "include": ["src"],
  "exclude": [
    "node_modules",
    "dist",
    "builds"
  ],
  "typeAcquisition": {"include": ["jest"]}
}
